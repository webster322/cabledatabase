<div class="container-fluid">
  <div class="row content">
    <div class="col-sm-3 sidenav">
      <ul class="nav nav-pills nav-stacked">
        <li class="active"><%=link_to 'Wszystkie włókna', fibres_path %></li>
        <li><%=link_to 'Dodaj nowe włókna', fibres_new_path %></li>
        <hr>
        <li><%=link_to 'Wszystkie obiekty', locations_index_path %></li>
        <li><%=link_to 'Wszystkie kable', wires_view_path %></li>
      </ul>
    </div>

    <div class="col-sm-9">
      <% flash.each do |key, value| %>
        <div class="alert alert-<%= key %>"><%= value %></div>
      <% end %>
      <table class="table">
        <thead>
          <th>Nr włókna</th>
          <th>Nr kabla</th>
          <th>Lokalizacja</th>
          <th>Półka</th>
          <th>Uszkodzenie</th>
          <th>Nazwa systemu</th>
          <th>Nazwa szafy</th>
          <th>Pomieszczenie</th>
        </thead>
        <tbody>
          <%= @fibres.each do |value| %>
            <tr>
              <td><%= value['number'] %></td>
              <td><%= value['name'] %></td>
              <td><%= value['location'] %></td>
              <td><%= value['shelf'] %></td>
              <td><%= value['damage'] %></td>
              <td><%= value['system'] %></td>
              <td><%= value['cabinet_name'] %></td>
              <td><%= value['room'] %></td>
              <td><%= link_to 'Edytuj', fibres_edit_path(:id => value['id']), class: "btn btn-warning btn-xs"%>
              <td><%= link_to 'Usuń', fibres_delete_path(:id => value['id']), class: "btn btn-danger btn-xs", data: { confirm: "Jesteś pewien?" } %>
            </tr>
          <% end %>
        </tbody>
    </div>
  </div>
</div>
