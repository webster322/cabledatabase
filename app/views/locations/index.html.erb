          <th>Nazwa obiektu</th>
        </thead>
        <tbody>
          <%= @locations.each do |value| %>
            <tr>
              <td><%= value['name'] %></td>
              <td><%= link_to 'UsuÅ„', locations_delete_path(:id => value['id']), class: "btn btn-danger btn-sm"%>
